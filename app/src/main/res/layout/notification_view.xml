<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/notification_title"
       android:maxLines="1"
       android:textSize="20sp"
       android:text="Hello"
       />

 <RelativeLayout android:id="@+id/lin"
     android:layout_height="wrap_content"
     android:layout_marginTop="10sp"
     android:layout_width="match_parent"
     android:layout_below="@+id/notification_title"
    >

    <ImageButton
        android:id="@+id/previous_not"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:background="@drawable/previous"
        />




    <ImageButton
        android:id="@+id/playPause_not"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:layout_marginStart="30sp"
        android:layout_toEndOf="@id/previous_not"
        android:background="@drawable/play_button"
        />

    <ImageButton
        android:id="@+id/next_not"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:background="@drawable/next"
        android:layout_toEndOf="@id/playPause_not"
        android:layout_marginStart="20sp"
        />

    <Button
        android:id="@+id/stop_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@+id/next_not"
        />




    </RelativeLayout>


</RelativeLayout>