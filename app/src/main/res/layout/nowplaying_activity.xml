<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/largeimage"
        android:layout_width="fill_parent"
        android:layout_height="300sp">

    </ImageView>

    <TextView
        android:id="@+id/nameofsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:maxLines="1"
         android:layout_below="@id/largeimage"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/previous"
        android:layout_height="wrap_content"
        android:layout_width="77dp"
        android:text="@string/previous"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/stop" />

    <Button
        android:id="@+id/next"
        android:layout_height="wrap_content"
        android:layout_width="77dp"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp" />

    <Button
        android:id="@+id/play_pause"
        android:layout_height="wrap_content"
        android:layout_width="77dp"
        android:text="@string/play_pause"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />





    <Button
        android:id="@+id/stop"
        android:layout_height="wrap_content"
        android:layout_width="77dp"
        android:text="Stop"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/play_pause"
        android:layout_alignStart="@+id/play_pause" />





</RelativeLayout>