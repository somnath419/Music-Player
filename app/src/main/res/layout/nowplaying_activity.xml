<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite">

    <ImageView
        android:id="@+id/largeimage"
        android:layout_width="fill_parent"
        android:layout_height="300sp">

    </ImageView>
    <ImageButton
        android:id="@+id/stop"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:layout_marginLeft="10sp"
        android:background="@drawable/pause_button"
        android:layout_centerHorizontal="true"
        />





    <TextView
        android:id="@+id/nameofsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:maxLines="1"
         android:layout_below="@id/largeimage"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />

<RelativeLayout
    android:layout_height="100sp"
    android:layout_width="match_parent"
    android:layout_marginTop="60sp"
    android:layout_below="@+id/nameofsong"
    android:gravity="bottom"
    android:id="@+id/Playing_item">

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       />


    <ImageButton
        android:id="@+id/previous"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:layout_marginStart="65sp"
        android:background="@drawable/previous"
        android:layout_alignParentBottom="true"
        />


    <RelativeLayout
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@id/previous"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/play_pauselinear">

    <ImageButton
        android:id="@+id/play"
       android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/play_button"
      />

    <ImageButton
        android:id="@+id/pause"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:background="@drawable/pause_button"
       />

    </RelativeLayout>





    <ImageButton
        android:id="@+id/next"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:layout_toEndOf="@+id/play_pauselinear"
          android:layout_marginStart="20sp"
        android:background="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/nex33t"
        android:layout_height="60sp"
        android:layout_width="60sp"
        android:layout_toEndOf="@+id/next"
        android:layout_marginStart="20sp"
        android:background="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />






</RelativeLayout>




</RelativeLayout>