<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/nowPlaying_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?colorPrimary">
        <View
            android:id="@+id/nowPlayinglist"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="end"
            android:background="@drawable/ic_list_white_24dp" />

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/song_icon"
        android:layout_width="fill_parent"
        android:layout_height="300sp" />


    <TextView
        android:id="@+id/nameofsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="15sp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#4004" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:background="#fff" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/_5_20" />


    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="start"
            android:background="@drawable/ic_skip_previous_black_24dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/play"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/ic_play_circle_outline_black_24dp" />

            <ImageButton
                android:id="@+id/pause"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/ic_pause_circle_outline_black_24dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="60sp"
            android:layout_height="60sp"

            android:background="@drawable/ic_skip_next_black_24dp" />

    </LinearLayout>


</LinearLayout>